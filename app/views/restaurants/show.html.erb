<div class="container m-3">
  <h1 class="mb-3"><%= @restaurant.name  %></h1>
  <p>Category : <%= @restaurant.category %></p>
  <p>Address : <%= @restaurant.address %></p>
  <p>Phone number : <%= @restaurant.phone_number %></p>
  <%= link_to 'Back to list', restaurants_path, class: 'btn btn-outline-secondary' %>
  <div>
    <h3 class="mt-3">Reviews</h3>
    <%= link_to 'Add a new review', new_restaurant_review_path(@restaurant), class: 'btn btn-outline-secondary' %>
    <% if @reviews.any? %>
      <ul>
        <% @reviews.each do |review| %>
          <li class="mt-3">Rating : <%= review.rating %> / Comment : <%= review.content %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="mt-3">No reviews</p>
    <% end %>
  </div>
</div>
